    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "functions": {
    "api/social/index.ts": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "env": {
    "NODE_ENV": "production"
  },
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  }
} 